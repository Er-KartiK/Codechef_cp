           Find total subscription cost if number of users are n and cost of 1 subscription is x and 6 people can use 1 subscription.
import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner input = new Scanner(System.in);
		int t=input.nextInt();
		for(int i=0;i<t;i++){
		    int n=input.nextInt();
		    int x=input.nextInt();
		    if(n==1) {
		    System.out.println(x);  }
		  else {
		  int a=((n/6)*x);
		  if(n%6==0)
		  System.out.println(a);
		  else
		  System.out.println(a+x);
		}
}
	}
}

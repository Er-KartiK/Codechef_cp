import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner input = new Scanner(System.in);
		int t= input.nextInt();
		for(int i=0;i<t;i++){
		    int n= input.nextInt();
		    int x = input.nextInt();
		    if(n<=x)
		    System.out.println(0);
		    else{
		        float a=(n-x)/4.0f;
		        int b=(int)Math.ceil(a);
		        System.out.println(b);
		    }
		}

	}
}
